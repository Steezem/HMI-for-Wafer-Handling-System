<UserControl x:Class="HMI_for_Wafer_Handling_System.Views.UserControls.LoadPortControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HMI_for_Wafer_Handling_System.Views"
             Height="150" Width="300">

    <UserControl.Resources>
        <local:WaferColorConverter x:Key="WaferColorConverter"/>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <ItemsControl ItemsSource="{Binding Slots}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Rectangle Width="40" Height="10" Stroke="Black" Margin="2"
                               Fill="{Binding IsOccupied, Converter={StaticResource WaferColorConverter}}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>